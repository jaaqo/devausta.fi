---
import Layout from "../layouts/Layout.astro";
import Button from "../components/Button.astro";
import { Image } from "@astrojs/image/components";
---

<Layout title="Welcome to Astro.">
  <section class="my-20 sm:my-36 flex">
    <div class="flex-[0_0_50%]">
      <h1 class="text-6xl sm:text-8xl my-8">Full-stack kehitystä ilman turhuuksia</h1>
      <p class="text-3xl sm:text-4xl my-8">
        Tarjoan pragmaattista, laadukasta ja käyttäjälähtöistä
        ohjelmistokehityskonsultointia vähintään vuoden mittaisiin projekteihin.
      </p>
      <Button to="#details">Minkä tyyppistä konsultointia?</Button>
    </div>
  </section>
  <section id="details" class="my-20 sm:my-52 flex flex-col md:flex-row">
    <div class="flex flex-[0_0_50%] justify-center align-center">
      <Image
        alt="Images of technologies I use"
        src={import("../assets/placeholder.png") as any}
        width={300}
        height={200}
      />
    </div>
    <div class="flex-[0_0_50%]">
      <p class="text-4xl my-8">
        Tarjoan pragmaattista, laadukasta ja käyttäjälähtöistä
        ohjelmistokehityskonsultointia vähintään vuoden mittaisiin projekteihin.
      </p>
      <Button to="#details">Minkä tyyppistä konsultointia?</Button>
    </div>
  </section>
</Layout>
